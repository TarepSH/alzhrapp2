<%= form_with(model: attending) do |form| %>
  <% if attending.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(attending.errors.count, "error") %> prohibited this attending from being saved:</h2>

      <ul>
        <% attending.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.date_select :name %>
  </div>
  <% Student.all.each do |student| %>
    <%= check_box_tag "attending[student_ids][]",student.id, @attending.student_ids.include?(student.id), id: dom_id(student) %>
    <%= label_tag dom_id(student), student.first_name %> <br>
  <% end %>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

