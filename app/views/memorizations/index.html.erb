<p id="notice"><%= notice %></p>

<h1>Memorizations</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Page</th>
      <th>Part</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @memorizations.each do |memorization| %>
      <tr>
        <td><%= memorization.name %></td>
        <td><%= memorization.page %></td>
        <td><%= memorization.part %></td>
        <td><%= link_to 'Show', memorization %></td>
        <td><%= link_to 'Edit', edit_memorization_path(memorization) %></td>
        <td><%= link_to 'Destroy', memorization, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Memorization', new_memorization_path %>
